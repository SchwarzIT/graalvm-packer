{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:18.04",
      "commit": true,
      "changes": [
        "ENV M2_HOME=/opt/maven",
        "ENV GRAALVM_HOME=/opt/graalvm-ce-java11-20.0.0",
        "ENV PATH=$GRAALVM_HOME/bin:$M2_HOME/bin:$PATH"
      ]
    }
  ],
  "provisioners": [
    {
      "script": "build.sh",
      "type": "shell"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "my-packer-image",
        "tag": "latest"
      }
    ]
  ]
}
